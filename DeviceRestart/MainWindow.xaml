<Window x:Class="DeviceRestart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeviceRestart"
        mc:Ignorable="d" ResizeMode="CanMinimize"
        Title="Device" Height="150" Width="250" MinHeight="150" MaxHeight="150" MinWidth="250" MaxWidth="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Disable" Click="Disable_OnClick"/>
        <Button Grid.Row="1" Content="Enable" Click="Enable_OnClick"/>
        <Button Grid.Row="2" Content="ReEnable" Click="ReEnable_OnClick"/>
    </Grid>
</Window>
